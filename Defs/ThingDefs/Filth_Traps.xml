<?xml version="1.0" encoding="utf-8"?>
<ThingDefs>
	<ThingDef Name="BaseFilth" Abstract="True">
		<label>Unspecified filth</label>
		<thingClass>Filth</thingClass>
    <eType>Filth</eType>
		<category>Filth</category>
		<altitudeLayer>Filth</altitudeLayer>
		<useStandardHealth>false</useStandardHealth>
		<drawerType>MapMeshOnly</drawerType>
		<baseMaterialType>Transparent</baseMaterialType>
	</ThingDef>

	<!-- end base definitions -->
<ThingDef ParentName="BaseFilth">
		<defName>Caltrops</defName>
		<label>Caltrops</label>
		<description>Nasty caltrops. The rain and wind will wash them away over time. Clean them to remove them.</description>
		<tickerType>Normal</tickerType>
		 <pathCost>120</pathCost>
		<passability>PassThroughOnly</passability>
		<thingClass>TrapPack.Caltrops</thingClass>
		<textureFolderPath>Filth/Caltrops/Caltrops</textureFolderPath>
				<beauty>Ugly</beauty>
	<filth>
		<cleaningWorkToReduceThickness>150</cleaningWorkToReduceThickness>
	</filth>
  </ThingDef>
  <ThingDef ParentName="BaseFilth">
		<defName>Building_Tripped_Pit_Trap</defName>
		   <category>Item</category>
		   <mineable>true</mineable>
		
		<label>Tripped Pit Trap</label>
		<description>A brutal spiked pit trap. It's been uncovered and used, so it's useless as a trap. Mine it to destroy it and free whoever's inside.</description>
		<thingClass>TrapPack.Building_Tripped_Pit_Trap</thingClass>
		<texturePath>Filth/Building_Tripped_Pit_Trap</texturePath>
		    <passability>Impassable</passability>
		    <canBeSpawningInventory>false</canBeSpawningInventory>
  </ThingDef>
</ThingDefs>
