  <RecipeDef ParentName="RecipeBase">
    <defName>MakeThrowableCaltrops</defName>
    <label>Make Throwable Caltrops</label>
    <description>makes a bag full of caltrops, ready to be thrown.</description>
    <jobString>Producing caltrops.</jobString>
    <workAmount>2500</workAmount>
    <workEffect>ExtractMetalFromSlag</workEffect>
 <sustainerSoundDef>Recipe_ExtractMetalFromSlag</sustainerSoundDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Metal</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <products>
      <li>
        <thingDef>Weapon_Caltrops</thingDef>
        <count>1</count>
      </li>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Metal</li>
      </thingDefs>
    </fixedIngredientFilter>
    	<skillGains>
		<li>
		<skill>Crafting</skill>
		<xp>100</xp>
		</li>
	</skillGains>
  </RecipeDef>
   <RecipeDef ParentName="RecipeBase">
    <defName>MakeElectronics</defName>
