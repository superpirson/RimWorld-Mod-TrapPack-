            <li>Metal</li>
        	</thingDefs>
        </filter>
        <count>5</count>
      </li>
        <li>
        <filter>
          <thingDefs>
        	<li>Silver</li>
        	</thingDefs>
        </filter>
        <count>20</count>
      </li>
